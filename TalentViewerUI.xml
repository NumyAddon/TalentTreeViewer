                    </Animations>
                </Texture>
                <MaskTexture parentKey="Sheen1Mask" file="Interface\Soulbinds\soulbinds_backgroundfx_mask_forge">
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeKey="$parent.Background" relativePoint="TOPLEFT"/>
                        <Anchor point="BOTTOMRIGHT" relativeKey="$parent.Background" relativePoint="BOTTOMRIGHT"/>
                    </Anchors>
                    <MaskedTextures>
                        <MaskedTexture childKey="Sheen1"/>
